server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name api.kratelabs.addxy.com;

    ssl_certificate     /etc/letsencrypt/live/api.kratelabs.addxy.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.kratelabs.addxy.com/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:5000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

server {
    server_name www.api.kratelabs.addxy.com api.kratelabs.addxy.com;
    return 301 https://api.kratelabs.addxy.com$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name www.api.kratelabs.addxy.com;
    return 301 https://api.kratelabs.addxy.com$request_uri;
}
